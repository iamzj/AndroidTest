<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <FrameLayout
        android:clipChildren="true"
        android:id="@+id/fl_primary"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/primary_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <CheckBox
            android:layout_marginTop="80dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/effect_tv_selector"
            android:id="@+id/primary_cb"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原图"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_negative"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/negative_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <CheckBox
            android:layout_marginTop="80dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/effect_tv_selector"
            android:id="@+id/negative_cb"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="底片"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_old"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/old_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <CheckBox
            android:layout_marginTop="80dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/effect_tv_selector"
            android:id="@+id/old_cb"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="老照片"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_relief"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/relief_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <CheckBox
            android:layout_marginTop="80dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/effect_tv_selector"
            android:id="@+id/relief_cb"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="浮雕"/>
    </FrameLayout>
</LinearLayout>